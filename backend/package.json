{
  "name": "backend",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "migrate": "sequelize-cli db:migrate",
    "migrate:test": "set NODE_ENV=test&& sequelize-cli db:migrate",
    "migrate:reset": "set NODE_ENV=test&& sequelize-cli db:drop && sequelize-cli db:create && sequelize-cli db:migrate",
    "seed": "sequelize-cli db:seed:all",
    "seed:test": "set NODE_ENV=test&& sequelize-cli db:seed:all",
    "db:reset": "set NODE_ENV=test&& sequelize-cli db:drop && sequelize-cli db:create && sequelize-cli db:migrate",
    "db:migrate:fresh": "set NODE_ENV=test&& sequelize-cli db:migrate:undo:all && sequelize-cli db:migrate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "mysql2": "^3.14.2",
    "nodemon": "^3.1.10",
    "sequelize": "^6.37.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "bcrypt": "^6.0.0",
    "jest": "^30.1.1",
    "jsonwebtoken": "^9.0.2",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFiles": [
      "dotenv/config"
    ]
  }
}
